{
  "manifest_version": 3,
  "name": "Trip Data Analyzer",
  "version": "1.0",
  "description": "Scrapes and analyzes trip data from car sharing services",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js",
        "popup/chart.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "static/css/*",
        "static/webfonts/*",
        "js/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}